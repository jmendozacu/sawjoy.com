<?xml version="1.0"?>
<config>
    <modules>
        <Mivec_Banner>
            <version>0.1</version>
        </Mivec_Banner>
    </modules>
    <frontend>
        <routers>
            <banner>
                <use>standard</use>
                <args>
                    <module>Mivec_Banner</module>
                    <frontName>banner</frontName>
                </args>
            </banner>
        </routers>
        <layout>
            <updates>
                <banner>
                    <file>mivec/banner.xml</file>
                </banner>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<banner>
				<use>admin</use>
				<args>
					<module>Mivec_Banner</module>
					<frontName>banner</frontName>
				</args>
			</banner>
        </routers>
    </admin>
    <global>
        <models>
            <banner>
                <class>Mivec_Banner_Model</class>
                <resourceModel>banner_mysql4</resourceModel>
            </banner>
            <banner_mysql4>
                <class>Mivec_Banner_Model_Mysql4</class>
                <entities>
                    <manager>
                        <table>mivec_banner</table>
                    </manager>
                </entities>
            </banner_mysql4>
        </models>
        <resources>
            <banner_setup>
                <setup>
                    <module>Mivec_Banner</module>
					<!--class>Mivec_Banner_Model_Resource_Setup</class-->
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </banner_setup>
            <banner_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </banner_write>
            <banner_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </banner_read>
        </resources>
		
        <blocks>
            <banner>
                <class>Mivec_Banner_Block</class>
            </banner>
        </blocks>
        <helpers>
            <banner>
                <class>Mivec_Banner_Helper</class>
            </banner>
        </helpers>
    </global>
</config>
